<!DOCTYPE html>
<html>

<head>
  <title>Hikes</title>
  <!-- Google Icon Fonts used by Materialize -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Materialize CSS Framework -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <!-- JavaScript for Materialize -->
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>


<body>
  <div class="container">
  
    <nav>
      <div class="nav-wrapper teal accent-4">
        <a href="/hikes" class="brand-logo left">HikeBook</a>
        <ul class="right">
            <li>    
                <a href="/hikes"><i class="left"></i>View Hikes</a>
            </li>
            <li>
                <a href="/hikes/new"><i class="left"></i>Add Hike</a>
            </li>
            <li>
              <a href="/users/favourites"><i class="left"></i>My Favourites</a>
          </li>
            <li>
                <% if (user) { %>
                    <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
                <% } else { %>
                    <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
                <% } %>
              </li>
        </ul>
      </div>
    </nav>
  
  
  
    <h1>My Favourite Hikes</h1>
    <ul>
    <% userFavourites.forEach(function(f) { %>
        
          <li><h4><a href="/hikes/<%= f.id %>">Hike Name: <%= f.name %></a></h4></li>
          <li>Hike Date:<%= f.date %></li>
          <form action="/users/<%= f.id%>/favourites/delete" method="POST"><button class="my-20 favourite-btn btn waves-effect waves-light white-text" type="submit">Remove From Favourites</button></form>
               
      <% }); %>
    </ul>
</div>

</body>
</html>